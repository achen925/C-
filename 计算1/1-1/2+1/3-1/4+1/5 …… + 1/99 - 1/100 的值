#define  _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
int main()
{
//计算1/1-1/2+1/3-1/4+1/5 …… + 1/99 - 1/100 的值
	float sum = 0;
	float ret = 1;
	int i = 1;
	int flag = 1;
	for (i = 1; i <= 100; i++)
	{
		ret =flag*( 1.0 / i);
		flag = -flag;
		sum = sum + ret;
	}
	printf("sum=%f\n", sum);
	return 0;
}
